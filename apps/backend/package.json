{
  "name": "backend",
  "version": "0.0.1",
  "type": "module",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "prettier": "@workspace/prettier-config",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "clean": "rm -rf dist node_modules",
    "typeorm": "typeorm-ts-node-esm",
    "migration:generate": "env-cmd -f .env.local -- pnpm run typeorm -- -d src/database/data-source.ts migration:generate",
    "migration:create": "pnpm run typeorm -- migration:create",
    "migration:run": "env-cmd -f .env.local -- pnpm run typeorm -- -d src/database/data-source.ts migration:run",
    "migration:revert": "env-cmd -f .env.local -- pnpm run typeorm -- -d src/database/data-source.ts migration:revert",
    "migration:sql": "NO_COLOR=1 pnpm exec env-cmd -f .env.local -- typeorm-ts-node-esm -d src/database/data-source.ts schema:log > src/database/migrations/$(date +\"%s.migration-%d-%m-%Y.sql\")",
    "schema:drop": "env-cmd -f .env.local -- pnpm run typeorm -- -d src/database/data-source.ts schema:drop"
  },
  "dependencies": {
    "@hedystia/better-auth-typeorm": "^0.3.7",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "@orpc/nest": "^1.10.2",
    "@orpc/openapi": "^1.10.2",
    "@orpc/server": "^1.10.2",
    "@orpc/zod": "^1.10.2",
    "@scalar/nestjs-api-reference": "^1.0.5",
    "@thallesp/nestjs-better-auth": "^2.1.0",
    "@workspace/orpc": "workspace:*",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.3",
    "env-cmd": "^11.0.0",
    "minimatch": "^10.0.3",
    "minio": "^8.0.6",
    "multer": "^2.0.2",
    "nestjs-i18n": "^10.5.1",
    "nestjs-paginate": "^12.8.3",
    "nestjs-zod": "^5.0.1",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.7",
    "@types/nodemailer": "^7.0.3",
    "@types/supertest": "^6.0.2",
    "@workspace/eslint-config": "workspace:^",
    "@workspace/prettier-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
